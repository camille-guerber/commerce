{% extends "base.html.twig" %}
{% block title %}
{{ parent() }} {{ title }}
{% endblock %}

{% block body %}
    <h1 class="display-3">{{ title }}</h1>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Description</th>
            <th colspan="3">Action</th>
        </tr>
        </thead>
        <tbody>
            {% for c in categories %}
                <tr class="table-light">
                    <td>{{ c.nom }}</td>
                    <td>{{ c.description }}</td>
                    <td><a href="{{ path('edit_category', {'id': c.id }) }}"><i class="far fa-edit"></i></a></td>
                    <td><a href="#"><i class="far fa-trash-alt"></i></a></td>
                    <td><a href="{{ path('view_category', {'id': c.id }) }}"><i class="far fa-eye"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}