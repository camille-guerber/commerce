{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form class="form-inline" action="{{ path('app_login') }}" method="post">
        <div class="form-group mb-2">
            <label for="username" class="sr-only">Pseudo</label>
            <input type="text" class="form-control-plaintext" name="_username" id="username" value="{{ last_username }}" placeholder="Votre email..">
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <label for="password" class="sr-only">Mot de passe</label>
            <input type="password" class="form-control-plaintext" id="password" name="_password" placeholder="Votre mot de passe..">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Se connecter</button>
        <a class="ml-1" href="{{ path('app_register') }}">S'inscrire</a>
    </form>

{% endblock %}

