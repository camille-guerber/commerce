{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <div class="jumbotron shadow">
        <h3>Inscription</h3>
        {{ form_start(form) }}
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12">
                    {{ form_row(form.email) }}
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    {{ form_row(form.username) }}
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    {{ form_row(form.phoneNumber) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12">
                    {{ form_row(form.plainPassword.first) }}
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    {{ form_row(form.plainPassword.second) }}
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <label>Photo profil</label>
                    {{ form_row(form.profilPic) }}
                    <div id="user-profil-pic"></div>
                </div>
            </div>
        <div class="row">
            <div class="col-lg-12">
                {{ form_row(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>

    <script>
        function readURL(input, targetImage, onCreate) {
            if (input.files && input.files[0]) {
                let reader = new FileReader();
                let file = input.files[0];

                if (/\.(jpe?g|png)$/i.test(file.name)) {
                    reader.onload = function (e) {
                        if (onCreate) {
                            let myImage = new Image();
                            myImage.setAttribute('class', 'img-full-width shadow');
                            myImage.src = e.target.result;
                            $(targetImage).empty();
                            $(targetImage).append(myImage);
                        }
                    };

                    reader.readAsDataURL(input.files[0]);
                } else {
                    input.value = '';
                    alert('Veuillez ins√©rer une image au format JPEG ou PNG');
                }
            }
        }

        $('#user_profilPic_file').change(function(){
            readURL(this, document.getElementById('user-profil-pic'), true);
        });
    </script>
{% endblock %}
