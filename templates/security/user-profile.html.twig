{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <h4>{{ title }}</h4>
    <div class="row">
        <div class="col-lg-6">
            {{ form_row(form.email) }}
        </div>
        <div class="col-lg-6">
            {{ form_row(form.phoneNumber) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            {{ form_row(form.username) }}
        </div>
        <div class="col-lg-12">
            {{ form_row(form.submit) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            {{ form_row(form.submit) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
